@model Sopro.Models.Simulation.Rushhour

<div class="card">
    <div class="form-group card-body">
        <div>
            <form asp-controller="Simulation" asp-action="AddRushhour" method="post" id="addRushhour" />
            <label></label>
            <div class="form-row">
                <div class="form-group col">
                    <label>Start</label>
                    <input  class="form-control" asp-for="@Model.start" />
                </div>
                <div class="form-group col">
                    <label>Ende</label>
                    <input class="form-control" asp-for="@Model.end" />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-8">
                    <label>Verteilungen</label>
                    <select class="form-control" >
                        <option>
                            Gaussian
                        </option>
                        <option>
                            Normal
                        </option>
                        <option>
                            Linear
                        </option>
                    </select>
                </div>
                <div class="form-group col">
                    <label>Anzahl der Buchungen</label>
                    <div class="input-group">
                        <input class="form-control" asp-for="@Model.bookings" />
                        <div class="input-group-append">
                            <span class="input-group-text"> Buchungen </span>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<br />