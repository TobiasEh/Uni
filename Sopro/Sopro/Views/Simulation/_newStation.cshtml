            </div>
            <div class="form-group">
                <label asp-for="maxParallelUseable" class="control-label"></label>
                <input asp-for="maxParallelUseable" class="form-control" />
                <span asp-validation-for="maxParallelUseable" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="id" class="control-label"></label>
                <input asp-for="id" class="form-control" />
                <span asp-validation-for="id" class="text-danger"></span>
            </div>
</div>
