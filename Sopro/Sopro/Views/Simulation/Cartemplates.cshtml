
@{
    ViewData["Title"] = "EditVehicle";
    Layout = "_AdminLayout";
}
@model List<Sopro.Interfaces.ControllerSimulation.IVehicle>

<h1 class="display-4 pt-5">Fahrzeuge</h1>
<div class="d-flex flex-wrap pt-5">
    <div class="mr-5 pr-5">
        <h3 class="pb-3">Hinzufügen</h3>
        <div>
            <form asp-controller="Vehicle" asp-action="Post" method="post" id="addCar" />

            <div class="form-group">
                <label>Fahrzeugmodell</label>
                <input form="addCar" class="form-control" />
                <small></small>
            </div>

            <div class="form-group">
                <label>Steckertyp des Fahrzeuges</label>
                <div>
                    <div class="form-check form-check-inline">
                        <label class="form-check-label">
                            <input form="addCar" type="radio" class="form-check-input" name="optradio">CCS
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <label class="form-check-label">
                            <input form="addCar" type="radio" class="form-check-input" name="optradio">Type-2-Plug
                        </label>
                    </div>
                </div>
                <small></small>
            </div>

            <div class="form-group">
                <label>Ladekapazität</label>
                <div class="input-group">
                    <input form="addCar" class="form-control" placeholder="0" />
                    <div class="input-group-append">
                        <span class="input-group-text"> kWh </span>
                    </div>
                </div>
                <small>Angab in kW</small>
            </div>

            <div class="form-group">
                <label>Ladezustand zu Beginn</label>
                <div class="input-group">
                    <input form="addCar" class="form-control" placeholder="0" />
                    <div class="input-group-append">
                        <span class="input-group-text"> % </span>
                    </div>
                </div>
                <small></small>
            </div>

            <div class="form-group">
                <label>Kilometeranzahl</label>
                <div class="input-group">
                    <input form="addCar" class="form-control" placeholder="0" />
                    <div class="input-group-append">
                        <span class="input-group-text"> km </span>
                    </div>
                </div>
                <small>Für wie viele Kilometer aufgeladen wird</small>
            </div>

            <div class="float-right mt-4 mb-5">
                <button type="reset" class="btn btn-secondary" onclick="document.getElementById('addCar').reset()">Abbrechen</button>
                <button form="addCar" type="submit" class="btn btn-primary btn-mhp">Hinzufügen</button>
            </div>
        </div>

    </div>

    <div>
        <h3 class="pb-3">Übersicht</h3>
        <div class="centered table-responsive rounded">
            <table class="table table-striped table-borderless table-hover">
                <thead>
                    <tr class="bg-dark text-white">
                        <th>
                            Modell
                        </th>
                        <th>
                            Stecker
                        </th>
                        <th>
                            Kapazität
                        </th>
                        <th>
                            SoC-start
                        </th>
                        <th>
                            SoC-end
                        </th>
                        <th>
                            Bearbeiten
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(Sopro.Interfaces.ControllerSimulation.IVehicle vehicle in Model)
                    {
                        <tr>
                            <td>
                                @vehicle.model
                            </td>
                            <td>
                                @{
                                    string x = "";
                                    foreach (var plug in vehicle.plugs)
                                    {
                                        x += plug.ToString() + " ";
                                    }
                                }
                                @x

                            </td>
                            <td>
                                @vehicle.capacity
                            </td>
                            <td>
                                @vehicle.socStart
                            </td>
                            <td>
                                @vehicle.socEnd
                            </td>
                            <td class="text-center">
                                <div>
                                    <a asp-controller="Vehicle" asp-action="Edit" asp-route="@Model.IndexOf(vehicle)">
                                        <img src="~/bootstrap-icons/pencil-square.svg" width="23" class="filter-blue mr-2" />
                                    </a>
                                    <a asp-controller="Vehicle" asp-action="Delete" asp-route="@Model.IndexOf(vehicle)">
                                        <img src="~/bootstrap-icons/trash.svg" width="23" class="mr-2" />
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>

    </div>


</div>
