
@{
    ViewData["Title"] = "Edit Vehicle";
    Layout = "_AdminLayout";
}
@model Sopro.ViewModels.VehicleViewModel

<h1 class="display-4 pt-5">Fahrzeuge</h1>
<div class="d-flex flex-wrap pt-5">
    <div class="mr-5 pr-5">
        <h3 class="pb-3">Edit</h3>
        <div>
            <form action="/Vehicles/Edit" method="post" id="editCar" />

            <div class="form-group">
                <label>Fahrzeugmodell</label>
                <input asp-for="@Model.vehicle.model" form="editCar" class="form-control" />
                <small></small>
            </div>

            <div class="form-group">
                <label>Steckertyp des Fahrzeuges</label>
                <div>
                    <div class="form-check form-check-inline">
                        <label class="form-check-label">
                            <input asp-for="@Model.vehicle.plug" form="addCar" type="radio" class="form-check-input" name="optradio" value="@Sopro.Models.Infrastructure.PlugType.TYPE2">Type-2
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <label class="form-check-label">
                            <input asp-for="@Model.vehicle.plug" form="addCar" type="radio" class="form-check-input" name="optradio" value="@Sopro.Models.Infrastructure.PlugType.CCS">CCS
                        </label>
                    </div>
                </div>
                <small></small>
            </div>

            <div class="form-group">
                <label>Ladekapazität</label>
                <div class="input-group">
                    <input asp-for="@Model.vehicle.capacity" form="editCar" class="form-control" placeholder="0" />
                    <div class="input-group-append">
                        <span class="input-group-text"> kWh </span>
                    </div>
                </div>
                <small>Angab in kW</small>
            </div>

            <div class="form-group">
                <label>Ladezustand zu Beginn</label>
                <div class="input-group">
                    <input asp-for="@Model.vehicle.socStart" form="editCar" class="form-control" placeholder="0" />
                    <div class="input-group-append">
                        <span class="input-group-text"> % </span>
                    </div>
                </div>
                <small></small>
            </div>

            <div class="form-group">
                <label>Ladezustand zu Ende</label>
                <div class="input-group">
                    <input asp-for="@Model.vehicle.socEnd" form="editCar" class="form-control" placeholder="0" />
                    <div class="input-group-append">
                        <span class="input-group-text"> % </span>
                    </div>
                </div>
                <small></small>
            </div>

            <div class="float-right mt-4 mb-5">
                <button type="reset" class="btn btn-secondary" onclick="document.getElementById('editCar').reset()">Abbrechen</button>
                <button form="editCar" type="submit" class="btn btn-primary btn-mhp">Hinzufügen</button>
            </div>
        </div>

    </div>

</div>
