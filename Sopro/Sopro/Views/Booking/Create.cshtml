
@{
    ViewData["Title"] = "Buchungsanfrage anlegen";
}
@model Sopro.ViewModels.BookingCreateViewModel
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor httpContextAccessor

<h1 class="display-4">Buchungsanfrage anlegen</h1>
<h1>@httpContextAccessor.HttpContext.Session.GetString("email")</h1>
@{ Sopro.Interfaces.AdministrationController.IBooking booking = Model.booking;}
<form asp-controller="Booking" asp-action="Post" method="post">
    <div>
        @*
            <div class="form-group">
                <label>Firmenstandort wählen</label>
                <select class="form-control" id="@Model.booking.location">
                    @foreach (Sopro.Models.Infrastructure.Location location in Model.locations)
                    {
                        if (location == Model.booking.location)
                        {
                            <option value="@location" selected="selected">@location.name </option>
                        } else
                        {
                            <option value="@location">@location.name </option>
                        }

                    }
                </select>
                <small></small>
            </div> *@

        <div class="form-group">
            <label for="@booking.plugs">Steckertyp des Fahrzeugs</label>
            <div class="flex-column pl-4">
                <div>
                    <label class="form-check-label">
                        <input type="radio" class="form-check-input" asp-for="@booking.plugs" name="optradio" value="@{ new List<Sopro.Models.Infrastructure.PlugType>() { Sopro.Models.Infrastructure.PlugType.CCS }; }">CCS
                    </label>
                </div>
                <div>
                    <label class="form-check-label">
                        <input type="radio" class="form-check-input" asp-for="@booking.plugs" name="optradio" value="@{ new List<Sopro.Models.Infrastructure.PlugType>() { Sopro.Models.Infrastructure.PlugType.TYPE2 }; }">Type-2 Plug
                    </label>
                </div>
                <div>
                    <label class="form-check-label">
                        <input type="radio" class="form-check-input" asp-for="@Model.booking.plugs" name="optradio" value="@{ new List<Sopro.Models.Infrastructure.PlugType>() { Sopro.Models.Infrastructure.PlugType.TYPE2, Sopro.Models.Infrastructure.PlugType.CCS }; }">Type-2 Plug und CCS
                    </label>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label for="@booking.socStart">Ladestand des Fahrzeugs</label>
            <div class="input-group">
                <input class="form-control" placeholder="@booking.socStart" asp-for="@booking.socStart" />
                <div class="input-group-append">
                    <span class="input-group-text"> % </span>
                </div>
            </div>
            <small></small>
        </div>

        <div class="form-group">
            <label for="@booking.socEnd">Kilometeranzahl</label>
            <div class="input-group">
                <input class="form-control" placeholder="@booking.socEnd" asp-for="@booking.socEnd"  />
                <div class="input-group-append">
                    <span class="input-group-text"> % </span>
                </div>
            </div>
            <small></small>
        </div>

        <div class="form-group input-append date form_datetime">
            <label for="@booking.startTime">Startzeit der Buchung</label>
            <input type="datetime-local" class="form-control" placeholder="@booking.startTime" asp-for="@booking.startTime" />
            <small></small>
        </div>

        <div class="form-group input-append date form_datetime">
            <label for="@booking.endTime ">Endzeit der Buchung</label>
            <input type="datetime-local" class="form-control" placeholder="@booking.startTime" asp-for="@booking.endTime" />
            <small></small>
        </div>

        <div class="form-group float-right mt-4">
            <button type="reset" class="btn btn-secondary">Abbrechen</button>
            <button type="submit" class="btn btn-primary btn-mhp">Buchen</button>
        </div>
    </div>
</form>


