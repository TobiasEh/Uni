
@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model Sopro.ViewModels.EditVehicleViewModel

<h1 class="display-4 pt-5">Edit</h1>
<div class="">
    <div class="mr-5 pr-5">
        <h3 class="pb-3">Edit</h3>
        <div>
            <form asp-controller="Vehicle" asp-action="Edit" asp-route-id="@Model.vehicle.id" method="post" id="addCar" />

            <div class="form-group">
                <label>Fahrzeugmodell</label>
                <input asp-for="@Model.vehicle.model" form="addCar" class="form-control" />
                <small></small>
            </div>

            <div class="form-group">
                <label>Steckertyp des Fahrzeugs</label>
                <div>
                    <div>
                        <label for="@Model.CCS">CCS-Stecker</label>
                        <input type="checkbox" asp-for="@Model.CCS" checked="@Model.vehicle.plugs.Contains(Sopro.Models.Infrastructure.PlugType.CCS)" />
                        @Html.ValidationMessageFor(model => model.CCS)
                    </div>
                    <div>
                        <label for="@Model.TYPE2">Typ-2-Stecker</label>
                        <input type="checkbox" asp-for="@Model.TYPE2" checked="@Model.vehicle.plugs.Contains(Sopro.Models.Infrastructure.PlugType.TYPE2)" />
                        @Html.ValidationMessageFor(model => model.TYPE2)
                    </div>
                </div>
                <small>Wähle die / den kompatiblen Stecker.</small>
            </div>

            <div class="form-group">
                <label>Ladekapazität</label>
                <div class="input-group">
                    <input asp-for="@Model.vehicle.capacity" form="addCar" class="form-control" placeholder="0" />
                    <div class="input-group-append">
                        <span class="input-group-text"> kWh </span>
                    </div>
                    @Html.ValidationMessageFor(model => model.vehicle.capacity)
                </div>
                <small>Angab in kW</small>
            </div>

            <div class="form-group">
                <label>Ladezustand zu Beginn</label>
                <div class="input-group">
                    <input asp-for="@Model.vehicle.socStart" form="addCar" class="form-control" placeholder="0" />
                    <div class="input-group-append">
                        <span class="input-group-text"> % </span>
                    </div>
                    @Html.ValidationMessageFor(model => model.vehicle.socStart)
                </div>
                <small></small>
            </div>

            <div class="form-group">
                <label>Ladezustand zu Ende</label>
                <div class="input-group">
                    <input asp-for="@Model.vehicle.socEnd" form="addCar" class="form-control" placeholder="0" />
                    <div class="input-group-append">
                        <span class="input-group-text"> % </span>
                    </div>
                    @Html.ValidationMessageFor(model => model.vehicle.socEnd)
                </div>
                <small></small>
            </div>

            <div class="float-right mt-4 mb-5">
                <a href="@Url.Action("Cartemplates")" class="btn btn-secondary" onclick="document.getElementById('addCar').reset()">Abbrechen</a>
                <button form="addCar" type="submit" class="btn btn-primary btn-mhp">Submit</button>
            </div>
        </div>

    </div>
</div>


