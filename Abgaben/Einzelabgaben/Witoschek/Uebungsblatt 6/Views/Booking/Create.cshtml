
@{
    ViewData["Title"] = "Create";
}

<p class="h4">Erstelle Buchung</p>
<div>
    <form asp-controller="Booking" asp-action="Post" method="post">
        <div class="form-group">
            <label for="in_currentCharge">Aktueller Ladestand</label>
            <input type="number" class="form-control" id="in_currentCharge" placeholder="Enter current charge in %" name="currentCharge" min="0" max="100">
        </div>
        <div class="form-group">
            <label for="in_requiredDistance">Anzahl km</label>
            <input type="number" class="form-control" id="in_requiredDistance" placeholder="Enter required distance in km" name="requiredDistance" min="1" max="1000">
        </div>
        <div class="form-group">
            <label for="in_start">Start</label>
            <input type="datetime-local" class="form-control" id="in_start" name="start" placeholder="Enter start">
        </div>
        <div class="form-group">
            <label for="in_end">Ende</label>
            <input type="datetime-local" class="form-control" id="in_end" name="end" placeholder="Enter end">
        </div>
        <div class="form-group">
            <label for="in_connectorType">Art des Anschlusses</label>
            <select class="form-control" id="in_connectorType" name="connectorType">
                <option value="SchukoSocket">Schuku-Socket (AC)</option>
                <option value="Type1Plug">Type 1-Plug (AC)</option>
                <option value="Type2Plug">Type 2-Plug (AC)</option>
                <option value="CHAdeMOPlug">CHAdeMO-Plug (DC)</option>
                <option value="TeslaSupercharger">Tesla Supercharger (DC)</option>
                <option value="CCSCombo2Plug">CCS Combo 2-Plug (DC)</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Buchen</button>
</form>

</div>
