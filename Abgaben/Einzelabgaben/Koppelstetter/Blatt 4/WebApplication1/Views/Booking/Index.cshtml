@model IEnumerable<WebApplication1.Models.Booking>
@{
    ViewData["Title"] = "Booking";
}


<h1>Bookings</h1>
<div>
    <p style="display:inline">Übersicht aller Buchugen:</p>
    <button class="btn btn-primary float-right" onclick="location.href='@Url.Action("Create", "Booking")'">Neue Buchung anlegen</button>
</div>
<br />
@if (Model == null)
{
    <p>Noch keine Buchungen vorhanden!</p>
}
else
{
	<table class="table table-striped table-hover table-borderless ">
		<tr>
			<th>Current charge </th>
			<th>distance</th>
			<th>Begin</th>
			<th>End</th>
		</tr>

		@foreach (var b in Model)
		{
			<tr>
				<td>@b.current_Charge</td>
				<td>@b.required_Distance</td>
				<td>@b.start_Time</td>
				<td>@b.end_Time</td>
			</tr>
		}
	</table>
}
