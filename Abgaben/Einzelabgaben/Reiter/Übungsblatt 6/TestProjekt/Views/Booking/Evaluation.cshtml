@model List<TestProjekt.ViewModel.ConnectorTypeEvaluationViewModel>
@{
    ViewData["Title"] = "Evaluation";
}

<div class="d-flex">
    <div>
        <p class="h3 d-inline-block">Auswertungen</p>
    </div>
    <div class="ml-auto">
        <input class="float-right col btn btn-primary btn-lg" type="button" name="createBooking" value="Neue Buchung" onclick="location.href='@Url.Action("create", "Booking")'" />
    </div>

</div>


@if (Model != null)
{
    <div class="table-responsive">
        <table class="table table-striped table-borderless table-hover">
            <caption>% Steckertypen</caption>
            <thead class="thead-dark">
                <tr>
                    <th>Stecker</th>
                    <th>%</th>
                </tr>

            </thead>

            @foreach (TestProjekt.ViewModel.ConnectorTypeEvaluationViewModel plug in Model)
            {
                <tr>
                    <td>@plug.connectorType</td>
                    <td>@plug.percBooking</td>
                </tr>
            }

        </table>
    </div>
}
else
{
    <p class="text-center col">Noch keine Buchungen vorhanden!</p>
}

<div class="d-flex">
    <div class="ml-auto">
        <input class="float-right col btn btn-primary btn-lg" type="button" name="export" value="Export" onclick="location.href='@Url.Action("expoEvaluationData", "DataModel", new { cacheKey = "bookings" })'" />
    </div>
</div>