
@{
    ViewData["Title"] = "Create";
}

<h1>Create Booking</h1>
<div>
    <form asp-controller="Booking" asp-action="postBooking" method="post">
        <div class="form-group">
            <label for="in_cur_charge">current charge</label>
            <input type="number" class="form-control" id="in_cur_charge" placeholder="current charge in %" min="0" max="100" name="cur_charge" required>
        </div>
        <div class="form-group">
            <label for="in_needed_distance">needed distance</label>
            <input type="number" class="form-control" id="in_needed_distance" placeholder="needed distance in km" min="1" max="1000" name="needed_distance" required>
        </div>
        <div class="form-group input-append date form_datetime">
            <label for="in_startTime">starting time</label>
            <input type="datetime-local" class="form-control" id="in_startTime" name="startTime" onchange="endTimeMIN(event)" required>
        </div>
        <div class="form-group input-append date form_datetime">
            <label for="in_endTime">ending time</label>
            <input type="datetime-local" class="form-control" id="in_endTime" name="endTime" required>
        </div>
        <div class="form-group">
            <label for="in_connectorType">Connector Type</label>
            <select class="form-control" id="in_connectorType" name="connectorType" required>
                <option value="type_a">Typ A</option>
                <option value="type_b">Typ B</option>
                <option value="type_c">Typ C</option>
            </select>
        </div>
        <button type="submit" id="submit_btn" class="btn btn-primary">Submit</button>
    </form>
</div>

<script type="text/javascript">
    var now = new Date().toISOString().slice(0, 16);
    document.getElementById("in_startTime").min = now;
    document.getElementById("in_endTime").min = now;
</script>
<script type="text/javascript">
    function endTimeMIN(e) {
        document.getElementById("in_endTime").min = e.target.value;
    }
</script>

