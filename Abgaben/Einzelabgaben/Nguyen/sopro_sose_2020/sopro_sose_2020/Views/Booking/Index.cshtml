@model List<Booking>
@{
    ViewData["Title"] = "Booking";
}

<h1>Bookings</h1>
<div class="centered container">
    <br />
    <div class="row">
        <p class="float-left col">Übersicht der Buchungen:</p>
        <input class="float-right col btn btn-primary" type="button" name="createBooking" value="+Buchung" onclick="location.href='@Url.Action("create", "Booking")'" />
    </div>
    <br />
    <div class="row">
        @if (Model != null)
        {
            <table class="table table-striped table-borderless table-hover">
                <tr>
                    <th>Current charge</th>
                    <th>Needed distance in km</th>
                    <th>Start time</th>
                    <th>End time</th>
                </tr>
                @foreach (var Booking in Model)
                {

                    <tr>
                        <td>@Booking.cur_charge</td>
                        <td>@Booking.needed_distance</td>
                        <td>@Booking.startTime</td>
                        <td>@Booking.endTime</td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p class="text-center col">Noch keine Buchungen vorhanden!</p>
        }
    </div>


</div>
