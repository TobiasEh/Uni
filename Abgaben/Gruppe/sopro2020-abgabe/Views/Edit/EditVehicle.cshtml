
@{
    ViewData["Title"] = "EditVehicle";
}

    <div class="row">
        <div class="col-5">
            <h1>
                Add vehicle
            </h1>
            <div>
                <form asp-controller="" asp-action="" method="post" id="addCar" />

                <div class="form-group">
                    <label>Name</label>
                    <input form="addCar" class="form-control" />
                    <small>Model of vehicle or other unique name</small>
                </div>

                <div class="form-group">
                    <label>Plug type of car</label>
                    <div>
                        <div class="form-check form-check-inline">
                            <label class="form-check-label">
                                <input form="addCar" type="radio" class="form-check-input" name="optradio">CCS
                            </label>
                        </div>
                        <div class="form-check form-check-inline">
                            <label class="form-check-label">
                                <input form="addCar" type="radio" class="form-check-input" name="optradio">Type-2-Plug
                            </label>
                        </div>
                    </div>
                    <small>Select the needed plug type for your car</small>
                </div>

                <div class="form-group">
                    <label>Battery capacity</label>
                    <div class="input-group">
                        <input form="addCar" class="form-control" placeholder="0" />
                        <div class="input-group-append">
                            <span class="input-group-text"> kWh </span>
                        </div>
                    </div>
                    <small></small>
                </div>

                <div class="form-group">
                    <label>Current Charge at start</label>
                    <div class="input-group">
                        <input form="addCar" class="form-control" placeholder="0" />
                        <div class="input-group-append">
                            <span class="input-group-text"> % </span>
                        </div>
                    </div>
                    <small></small>
                </div>

                <div class="form-group">
                    <label>Needed distance</label>
                    <div class="input-group">
                        <input form="addCar" class="form-control" placeholder="0" />
                        <div class="input-group-append">
                            <span class="input-group-text"> km </span>
                        </div>
                    </div>
                    <small></small>
                </div>

                <div class="float-right mt-4">
                    <button form="addCar" type="reset" class="btn btn-secondary">Cancel</button>
                    <button form="addCar" type="submit" class="btn btn-primary">Add</button>
                </div>
            </div>

        </div>

        <div class="col-7">
            <h1>Overview of vehicle models</h1>
            <div class="centered">
                <table class="table table-striped table-borderless table-hover">
                    <thead>
                        <tr>
                            <th>
                                Model
                            </th>
                            <th>
                                Plug type
                            </th>
                            <th>
                                capacity
                            </th>
                            <th>
                                SoC-start
                            </th>
                            <th>
                                SoC-end
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (var i = 0; i < 5; i++)
                        {
                            <tr>
                                <td>
                                    example
                                </td>
                                <td>
                                    example
                                </td>
                                <td>
                                    example
                                </td>
                                <td>
                                    example
                                </td>
                                <td>
                                    example
                                </td>
                                <td>
                                    <a asp-action="details" asp-route-id="id">Edit</a> |
                                    <a asp-action="delete" asp-route-id="id">Delete</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>

        </div>

    </div>