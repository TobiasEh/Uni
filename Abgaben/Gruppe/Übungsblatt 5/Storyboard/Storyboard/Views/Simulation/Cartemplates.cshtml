
@{
    ViewData["Title"] = "EditVehicle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-5">
        <h1>
            Fahrzeug hinzufügen
        </h1>
        <div>
            <form asp-controller="" asp-action="" method="post" id="addCar" />

            <div class="form-group">
                <label>Fahrzeugmodell</label>
                <input form="addCar" class="form-control" />
                <small></small>
            </div>

            <div class="form-group">
                <label>Steckertyp des Fahrzeuges</label>
                <div>
                    <div class="form-check form-check-inline">
                        <label class="form-check-label">
                            <input form="addCar" type="radio" class="form-check-input" name="optradio">CCS
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <label class="form-check-label">
                            <input form="addCar" type="radio" class="form-check-input" name="optradio">Type-2-Plug
                        </label>
                    </div>
                </div>
                <small></small>
            </div>

            <div class="form-group">
                <label>Ladekapazität</label>
                <div class="input-group">
                    <input form="addCar" class="form-control" placeholder="0" />
                    <div class="input-group-append">
                        <span class="input-group-text"> kWh </span>
                    </div>
                </div>
                <small>Angab in kW</small>
            </div>

            <div class="form-group">
                <label>Ladezustand zu Beginn</label>
                <div class="input-group">
                    <input form="addCar" class="form-control" placeholder="0" />
                    <div class="input-group-append">
                        <span class="input-group-text"> % </span>
                    </div>
                </div>
                <small></small>
            </div>

            <div class="form-group">
                <label>Kilometeranzahl</label>
                <div class="input-group">
                    <input form="addCar" class="form-control" placeholder="0" />
                    <div class="input-group-append">
                        <span class="input-group-text"> km </span>
                    </div>
                </div>
                <small>Für wie viele Kilometer aufgeladen wird</small>
            </div>

            <div class="float-right mt-4">
                <button form="addCar" type="reset" class="btn btn-secondary">Cancel</button>
                <button form="addCar" type="submit" class="btn btn-primary btn-mhp">Add</button>
            </div>
        </div>

    </div>

    <div class="col-7">
        <h1>Fahrzeug Übersichts</h1>
        <div class="centered">
            <table class="table table-striped table-borderless table-hover">
                <thead>
                    <tr>
                        <th>
                            Modell
                        </th>
                        <th>
                            Stecker
                        </th>
                        <th>
                            Kapazität
                        </th>
                        <th>
                            SoC-start
                        </th>
                        <th>
                            SoC-end
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @for (var i = 0; i < 5; i++)
                    {
                        <tr>
                            <td>
                                example
                            </td>
                            <td>
                                example
                            </td>
                            <td>
                                example
                            </td>
                            <td>
                                example
                            </td>
                            <td>
                                example
                            </td>
                            <td>
                            <button class="btn btn-primary btn-mhp">
                                <img src="~/bootstrap-icons/pencil.svg" width="20" />
                            </button> 
                            <button class="btn btn-secondary">
                                <img src="~/bootstrap-icons/x-circle-fill.svg" width="20" />
                            </button>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>

    </div>

</div>

